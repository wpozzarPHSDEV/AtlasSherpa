{
  "manifest_version": 2,

  "name": "BBCRM Sherpa",
  "description": "BBCRM Sherpa.  This extension organizes your CRM browser history.",
  "version": "1.1.2",
  "icons": { "128": "img/icon_128.png" },
  "permissions": [
    "history",
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [ "./plugins/jquery/jquery-3.3.1.min.js", "background.js" ]
  },
  "web_accessible_resources": ["*.png"]
}